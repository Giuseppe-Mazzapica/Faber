{
    "name": "giuseppe-mazzapica/faber",
    "description": "A tiny dependency injection container and factory class for WordPress",
    "keywords": ["wordpress"],
    "homepage": "https://github.com/Giuseppe-Mazzapica/Faber",
    "license": "MIT",
    "authors": [
        {
            "name": "Giuseppe Mazzapica",
            "email": "giuseppe.mazzapica@gmail.com",
            "homepage": "http://gm.zoomlab.it",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/Giuseppe-Mazzapica/Faber/issues",
        "source": "https://github.com/Giuseppe-Mazzapica/Faber"
    },
    "require": {
        "php": ">=5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "mockery/mockery": "dev-master",
        "brain/hooks-mock": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "GM\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GM\\Faber\\Tests\\": "tests/src/"
        },
        "files": ["tests/helpers.php"]
    },
    "config": {
        "optimize-autoloader": true
    }
}
